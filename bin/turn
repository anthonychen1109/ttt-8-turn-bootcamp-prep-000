#!/usr/bin/env ruby
require_relative '../lib/turn'
board = [" "," "," "," "," "," "," "," "," "]

puts "Welcome to Tic Tac Toe!"
display_board(board)
counter = 0

while counter < 8
  puts "Please enter 1-9:"
  input = gets.strip
  index = input_to_index(input)

  if valid_move?(board,index)
    move(board, index)
    counter += 1
  else
    puts "Try again:"
  end
end
display_board(board)
